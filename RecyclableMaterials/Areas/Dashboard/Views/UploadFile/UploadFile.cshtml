@model IEnumerable< RecyclableMaterials.Areas.Dashboard.Models.ImageModel>

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashbordLayout2.cshtml";
}






<div class="main-content">

    <div class="page-content">



        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Image Tabel</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header container mb-10">

                            <form method="post" enctype="multipart/form-data" asp-action="UploadFile" asp-area="Dashboard" asp-controller="UploadFile">

                                <input type="file" name="file" style="border: solid #eff2f7;background: #eff2f7;max-margin-right:30px " />
                                     
                                       
                                <input type="text" name="name" placeholder="image Name" style="max-margin-right:30px " />
                                <button type="submit" class="btn btn-primary">Upload</button>

                            </form>
                        </div>
                        <div class="card-body">

                            <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                                <div class="row dt-row">
                                    <div class="col-sm-12">
                                        <table id="datatable" class="table table-hover table-bordered table-striped dt-responsive nowrap dataTable no-footer dtr-inline" style="text-align:center; border-collapse: collapse; border-spacing: 0px; width: 100%;" aria-describedby="datatable_info">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Id)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Name)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.ImagePath)
                                                    </th>
                                                    <th>
                                                        Actions
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Id)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td style="width:150px">
                                                            <img src="@Url.Content("~/" + item.ImagePath)" width="40%" />
                                                        </td>

                                                        <td>
                                                            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.Id">
                                                                <i class="fas fa-trash-alt delete-icon"></i>
                                                            </a>

                                                            <div class="modal" id="exampleModal-@item.Id">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title">Modal title</h5>
                                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                                                <span aria-hidden="true"></span>
                                                                            </button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <p>Are you Sure Delete Item @item.Name ?</p>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                                                @Html.AntiForgeryToken()
                                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                                            </form>

                                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                       
                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <script>document.write(new Date().getFullYear())</script> © Clivax.
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-end d-none d-sm-block">
                            Crafted  <i class="mdi mdi-heart text-danger"></i> by AbuIrmaileh</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>

</div>




