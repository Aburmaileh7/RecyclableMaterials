@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@model IEnumerable< RecyclableMaterials.Models.ProductModel>


@{
    ViewData["Title"] = "Myproduct";
}

<section class="page-header">
    <div class="page-header-bg" style="background-image: url(images/backgrounds/used/bcg1.jpg);">
    </div>
    <div class="container">
        <div class="page-header__inner">
            <h2>Materials User</h2>
            <ul class="thm-breadcrumb list-unstyled">
                <li>Prodcut</li>
                <li>Manage</li>
            </ul>
            <div class="comment-form__btn-box" style="padding-top:30px   ">
                <a asp-action="Create" asp-controller="Product" class="thm-btn comment-form__btn">New Materials</a>
            </div>
        </div>
        
    </div>
</section>


<div style="margin-left:40px ;margin-right:40px ;margin-bottom:40px; padding-top:50px; padding-bottom:50px;">

    <div class="request-a-pickup__tab-content">

        <div class="request-a-pickup__tab-content-form-box ">
            <div class="row">
                @* ////////// *@

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImagePath)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            var userid = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            if (item.UserId == userid)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td style="width:150px">
                                        <img src="@Url.Content("~/" + item.ImagePath)" width="40%" />
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.ProductId">

                                            <i class="fas fa-trash-alt delete-icon"></i>
                                        </a>
                                        @*   modal *@
                                        <div class="modal" id="exampleModal-@item.ProductId">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Modal title</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true"></span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you Sure Delete Item @item.Name ?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form asp-action="Delete" asp-route-id="@item.ProductId" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>

                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <a type="button" class="btn btn-primary" asp-action="Edit" asp-controller="Product"
                                            asp-area="" asp-route-id="@item.ProductId">
                                            <i class="fas fa-edit edit-icon"></i>
                                        </a>

                                    </td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>








